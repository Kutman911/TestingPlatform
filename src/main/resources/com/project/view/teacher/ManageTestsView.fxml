
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10"
      fx:controller="com.project.controller.teacher.ManageTestsController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Управление тестами" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="tableTests" prefHeight="200.0">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50" />
            <TableColumn fx:id="colTitle" text="Название" prefWidth="200" />
            <TableColumn fx:id="colDuration" text="Длительность" prefWidth="100" />
            <TableColumn fx:id="colPublished" text="Опубликован" prefWidth="100" />
        </columns>
    </TableView>
    <HBox spacing="5">
        <TextField fx:id="txtTitle" promptText="Название теста" />
        <TextField fx:id="txtDuration" promptText="Длительность (мин)" />
        <CheckBox fx:id="chkPublished" text="Опубликован" />
        <Button fx:id="btnAddTest" text="Добавить" onAction="#addTest" />
        <Button fx:id="btnDeleteTest" text="Удалить" onAction="#deleteTest" />
    </HBox>
</VBox>
